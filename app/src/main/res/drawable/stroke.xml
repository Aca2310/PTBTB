<!-- res/drawable/edittext_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Warna latar belakang transparan -->
            <stroke
                android:color="#9E326C"
            android:width="2dp" />   <!-- Lebar garis tepi -->
            <corners android:radius="10dp" /> <!-- Sudut lengkung -->
        </shape>
    </item>

    <!-- Inner padding to avoid text overlapping with border -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>
